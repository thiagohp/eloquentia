<div
	t:type="Layout" 
	t:tag="tag"
	t:siteName="siteName"
	t:title="title"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns="http://www.w3.org/1999/xhtml"
	class="${cssClass}">
	
	<t:if t:test="page">
		<div t:type="ViewPage" t:page="page" t:teaser="false"/>
	</t:if>
	<t:if t:test="!page">	
		<div t:type="ViewPagesByTag" t:tag="mainTag"/>
	</t:if>
	
</div>